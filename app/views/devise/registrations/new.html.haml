%section#login
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "entry" }) do |f|
    %h1 Register yourself first!
    %fieldset
      %div
        = f.label :email, "Email"
        = f.text_field :email, :autofocus => true, :size => 60

      %div
        = f.label :password
        = f.password_field :password, :size => 60

      %div
        = f.label :password_confirmation
        = f.password_field :password_confirmation, :size => 60

    .action
      = f.submit "Sign up", :class => "btn"

    %br
    .p
      = link_to "Log in", new_session_path(resource_name)
      or
      = link_to "Forgot your password?", new_password_path(resource_name)